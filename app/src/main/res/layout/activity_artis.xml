<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.home.ArtisActivity">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:layout_margin="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/the_1975" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama band/penyanyi"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/circular_a_bold"
        android:textSize="24sp"
        android:layout_below="@id/profileImage"/>

    <TextView
        android:id="@+id/listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pendengar bulanan"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/circular_a_regular"
        android:textSize="15sp"
        android:layout_below="@id/artistName"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/listener">

        <Button
            android:id="@+id/buttonIkuti"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="IKUTI"
            android:backgroundTint="@color/btn_page"
            android:fontFamily="@font/circular_a_regular"
            android:textSize="12sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/buttonIkuti"
            android:layout_marginStart="206dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@id/buttonIkuti"
            android:src="@drawable/shuffle" />

    </RelativeLayout>


</RelativeLayout>
